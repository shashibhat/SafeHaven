# Security System Configuration

# JWT Secret - CHANGE THIS TO A SECURE RANDOM STRING
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mqtt:1883

# Database Configuration
DATABASE_URL=/app/data/security.db

# File Storage
UPLOAD_DIR=/app/uploads
MODELS_DIR=/app/models
CLIPS_DIR=/app/clips
FRAMES_DIR=/app/frames

# Camera Configuration
MAX_CONCURRENT_STREAMS=4
STREAM_RETRY_ATTEMPTS=3
HEALTH_CHECK_INTERVAL=30000

# AI/ML Configuration
INFERENCE_BATCH_SIZE=1
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.4
EMBEDDING_MODEL_PATH=/app/models/mobilenet_v2.onnx
CUSTOM_MODELS_DIR=/app/models/custom

# GPIO Configuration (set to true if using hardware GPIO)
GPIO_ENABLED=false

# Recording Configuration
RECORDING_DURATION=30
MAX_STORAGE_GB=100
AUTO_CLEANUP_ENABLED=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Security System <your-email@gmail.com>

# Webhook Configuration
WEBHOOK_TIMEOUT=5000

# Rules Engine Configuration
RULES_CACHE_TTL=300000
MAX_CONCURRENT_RULES=10

# System Configuration
NODE_ENV=production
PORT=3000

# Performance Settings
MEMORY_LIMIT=2G
CPU_LIMIT=2

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/security.log